.wrap {
    display: flex;
    width: 100%;
    border-bottom: 5rpx solid #ccc;
}
.wrap .img {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}
.img image{
    width: 80%;
}

.wrap .content{
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.content .r1{
    /* 灵活盒子模型 */
    display: -webkit-box;
    overflow: hidden;
    /* 显示两行 */
    -webkit-line-clamp: 2;
        /* 垂直显示 */
    -webkit-box-orient: vertical;

}
.r2{
    color:var(--themeColor);
    font-size: 32rpx;
}