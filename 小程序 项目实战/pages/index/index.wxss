.swiper image{
        width: 100%;
}   
.swiper swiper{
        width: 750rpx; 
        height: 340rpx; 
} 
.cata image{
    width: 100%;
}
.cata navigator{
        flex: 1;
}
.cata {
    padding: 20rpx;
    display: flex;
}
.index_floor{
        width: 100%;
}
.content  navigator{
     float: left;
     width: 33.33%;
    
}
.content{
    overflow: hidden;
    
}
.title{
    padding: 10rpx 0;
}
.group{
    padding: 10rpx;
}

.content navigator:nth-last-child(-n+4){  
        height: calc(33.33vw * 375/ 232/ 2);
        border-left:10rpx solid white;
}
.content  navigator image{
    width: 100%; 
    height: 100%;
} 
.content navigator:nth-child(2),.content navigator:nth-child(3){
    border-bottom: 10rpx solid #fff;
}
